<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>
    <h1>Check die regels hier:</h1>

    <script>
    	var allRules = <%- rules %>;
    </script>

    <% myrules = JSON.parse(rules); %>
    <% for(var i = 0; i < myrules.length; i++) { %>
	    <div class="rule" data-i="<%= i %>" data-id="<%= myrules[i].id %>">
	    	<div class="if" data-id="<%= myrules[i].antecedent.id %>">
	    		<!--<span class="if_text">IF</span>-->
	    		<div class="vac if_descr">
	    			<div><%= myrules[i].description %></div>
	    		</div>
	    	</div>
	    	<div class="then" data-id="<%= myrules[i].consequent.id %>">
	    		<div class="vac shot" data-id="<%= myrules[i].consequent.options[0].id %>">
	    			<div><%= myrules[i].consequent.options[0].description %></div>
	    		</div>
	    		<div id="plus_<%= i %>" data-i="<%= i %>" class="plusButton"><span class="glyphicon glyphicon-plus"></span></div>
	    	</div>
	    </div>
	    <div class="options" data-i="<%= i %>">
	    	<% for(var j = 0; j < myrules[i].consequent.options.length; j++) { %>
	    	<div class="vac option" data-j="<%= j %>">
    			<div><%= myrules[i].consequent.options[j].description %></div>
    		</div>
	    	<% } %>
	    </div>
	<% } %>


    <script src="vendor/fastclick.js"></script>
    <script src="vendor/jquery-1.11.0.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="javascripts/main.js"></script>
  </body>
</html>
